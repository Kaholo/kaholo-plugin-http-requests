{
  "name": "HTTP-Requests",
  "viewName": "HTTP Requests",
  "type": "executer",
  "exposeRoute": false,
  "execProgram": "node",
  "main": "app.js",
  "version": "2.0.2",
  "description": "An HTTP client based on Axios",
  "imgUrl": "logo.png",
  "category": "Basic Tools",
  "keywords": [
    "http",
    "web",
    "https",
    "api",
    "get",
    "put",
    "curl",
    "post",
    "patch",
    "delete",
    "request",
    "url",
    "rest",
    "axios"
  ],
  "auth": {
    "authId": "httpRequestUserPassBearer",
    "params": [
      {
        "name": "username",
        "viewName": "Username",
        "description": "User name to authenticate the request (HTTP Basic auth)",
        "type": "string"
      },
      {
        "name": "password",
        "viewName": "Password or Token",
        "description": "Password or token to authenticate the request (HTTP Basic auth)",
        "type": "vault"
      },
      {
        "name": "bearerToken",
        "viewName": "Bearer Token",
        "description": "A token (JWT, OAuth, etc) to authenticate an HTTPS request",
        "type": "vault"
      }
    ]
  },
  "methods": [
    {
      "name": "sendRequest",
      "viewName": "Send HTTP Request",
      "params": [
        {
          "name": "method",
          "viewName": "HTTP Request Method",
          "description": "The HTTP method to use for the request",
          "learnUrl": "https://developer.mozilla.org/en-US/docs/Web/HTTP/Methods",
          "type": "options",
          "default": "GET",
          "options": [
            {
              "id": "GET",
              "name": "GET"
            },
            {
              "id": "POST",
              "name": "POST"
            },
            {
              "id": "PUT",
              "name": "PUT"
            },
            {
              "id": "PATCH",
              "name": "PATCH"
            },
            {
              "id": "DELETE",
              "name": "DELETE"
            }
          ]
        },
        {
          "name": "url",
          "viewName": "URL",
          "description": "The URL to which the request will be sent",
          "placeholder": "https://httpbin.org/get",
          "type": "string",
          "required": true
        },
        {
          "name": "body",
          "viewName": "Body",
          "description": "Body of HTTP request, format matching Content-Type header",
          "type": "text",
          "placeholder": "{\"query\":{\"match_all\":{}}}"
        },
        {
          "name": "headers",
          "viewName": "Headers (JSON or Object)",
          "description": "Used in an HTTP request to provide information about the request context",
          "type": "text",
          "parserType": "object",
          "placeholder": "{\"Content-Type\":\"application/json\", \"X-Atlassian-Token\":\"no-check\"}"
        }
      ]
    }
  ]
}
